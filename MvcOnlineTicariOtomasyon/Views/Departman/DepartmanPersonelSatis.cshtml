@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHaraket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
  

}


<h5 class="card-header mt-3">Departman Personel Satış </h5>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">
        Satış Yapan Personel Adı: @ViewBag.person
    </li>
</ol>

<table class="table table-bordered" id="Table" width="100%" collspacing="0">
    <thead>
        <tr>
            <th>Satış ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Fiyat</th>
            <th>Adet</th>
            <th>Toplam Tutar</th>
            <th>Satış Tarihi</th>
        </tr>
    </thead>
    <tbody class="table-border-bottom-0">

        @foreach (var item in Model)
        {
            <tr name="@item.SatisID">
                <td>@item.SatisID</td>
                <td>@item.Urun.UrunAdi</td>
                <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
                <td>@item.Fiyat</td>
                <td>@item.Adet</td>
                <td>@item.ToplamTutar</td>
                <td>@item.Tarih.ToString("dd.MM.yyyy")</td>


            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Yazdir/PersonelSatis/@ViewBag.personelId" class="btn btn-primary">Yazdır</a>




<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />


<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />


<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>


<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<script>

    $('#Table').dataTable({});

</script>