@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h5 class="card-header mt-3">Departmanlar </h5>
<div class="table-responsive text-nowrap m-2">

    <table class="table table-bordered" id="Table" width="100%" collspacing="0">
        <thead>
            <tr>
                <th>Departman Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>

        <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                <tr name="@item.DepartmanID">
                    <td>@item.DepartmanAd</td>
                    <td>
                        <a href="/Departman/DepartmanGetir/@item.DepartmanID" class="btn btn-info btn-sm"><i class="bx bxs-edit"></i></a>
                        <a href="/Departman/DepartmanSil/@item.DepartmanID" class="btn btn-danger btn-sm"><i class="bx bx-minus-circle"></i></a>
                        <a href="/Departman/DepartmanDetay/@item.DepartmanID" class="btn btn-success btn-sm"><i class='bx bxs-detail'></i></a>
                    </td>

                </tr>

            }
        </tbody>
    </table>
    <a href="/Departman/DepartmanEkle" class="btn btn-primary">Kategori Ekle</a>
</div>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>

$('#Table').dataTable({});

</script>