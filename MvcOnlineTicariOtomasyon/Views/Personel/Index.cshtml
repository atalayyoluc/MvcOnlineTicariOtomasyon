@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="card-header mt-3">Personeller </h2>




<div class="card-body pb-0">
    <div class="row d-flex align-items-stretch">
@foreach (var item in Model) { 
        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
            <div class="card bg-light">
                <div class="card-header text-muted border-bottom-0">
                    @item.Departman.DepartmanAd
                </div>
                <div class="card-body pt-0">
                    <div class="row">
                        <div class="col-7">
                            <h2 class="lead"><b>@item.PersonelAd @item.PersonelSoyad</b></h2>
                            <p class="text-muted text-sm"><b>About: </b>@item.Hakkında </p>
                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: @item.Adress</li>
                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone #: @item.TelefonNumarası</li>
                            </ul>
                        </div>
                        <div class="col-5 text-center">
                            <img src="@item.PersonelGorsel" alt="" class="img-circle img-fluid">
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-right">
                        <a href="/Personel/PersonelGetir/@item.PersonelID" class="btn btn-info btn-sm"><i class="bx bxs-edit"></i></a>  
                       <a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class="btn btn-sm btn-primary">
                            <i class="fas fa-user"></i> Satış Geçmişi
                        </a>
                    </div>
                </div>
            </div>
        </div>

}
    </div>
</div>
<br />
<a href="/Personel/PersonelEkle" class="btn btn-primary btn-sm">Personel Ekle</a>



