@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h5 class="card-header mt-3">Departman Detayları </h5>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">
        Fatura Kalemleri
    </li>
</ol>




<table class="table table-bordered" id="Table" width="100%" collspacing="0">
    <thead>
        <tr>
            <th>ID</th>
            <th>Açıklama</th>
            <th>Miktar</th>
            <th>Birim Fiyat</th>
            <th>Tutar</th>
        </tr>
    </thead>

    <tbody class="table-border-bottom-0">

        @foreach (var item in Model)
        {
            <tr name="@item.FaturaID">
                <td>@item.FaturaKalemID</td>
                <td>@item.Aciklama</td>
                <td>@item.Miktar</td>
                <td>@item.BirimFiyat</td>
                <td>@item.Tutar</td>


            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Fatura/YeniKalemGiris" class="btn btn-success">Yeni Kalem Girişi</a>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

