@model MvcOnlineTicariOtomasyon.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "YeniKalemGiris";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h5 class="card-header mt-3">Yeni Kalem Girişi </h5>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
    @Html.LabelFor(x => x.Miktar)
    @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })
    @Html.LabelFor(x => x.BirimFiyat)
    @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })
    @Html.Label("Fatura")
    @Html.DropDownListFor(x => x.FaturaID, (List<SelectListItem>)ViewBag.Deger1, new { @class = "form-control" })
    



    <button class="btn btn-outline-dark">Yeni Fatura Girişi</button>





</form>

