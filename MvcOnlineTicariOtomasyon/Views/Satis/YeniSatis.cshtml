@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model SatisHaraket
@{
    ViewBag.Title = "SatisEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h5 class="card-header mt-3">Yeni Satış Oluşturma </h5>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Urun.UrunAdi)
    @Html.DropDownListFor(x => x.UrunId, (List<SelectListItem>)ViewBag.Urun, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Cariler.CariAd)
    @Html.DropDownListFor(x => x.CariId, (List<SelectListItem>)ViewBag.Cariler, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Personel.PersonelAd)
    @Html.DropDownListFor(x => x.PersonelId, (List<SelectListItem>)ViewBag.Personeller, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Fiyat)
    @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Adet)
    @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ToplamTutar)
    @Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form-control" })
    <br />



    <br />
    <button class="btn btn-outline-dark">Satış Yap</button>





</form>

