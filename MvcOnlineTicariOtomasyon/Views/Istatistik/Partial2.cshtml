@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.UrunKategoriDTO>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                  

           
                    <th style="width: 10px">#</th>
                    <th>Kategori</th>
                    <th>Progress</th>
                    <th style="width: 40px">Ürün Sayısı</th>
                </tr>
            </thead>
            <tbody>
                @{ int sayi2 = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{sayi2++;} @sayi2</td>
                        <td>@item.Kategori</td>
                        <td>
                            @if (item.Sayi <= 20)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (item.Sayi > 20 && item.Sayi <= 60)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 55%"></div>
                                </div>
                            }
                            @if (item.Sayi > 60)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-primary" style="width: 55%"></div>
                                </div>
                            }
                            @if (item.Sayi <= 20)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                        <td>
                            @if (item.Sayi <= 20)
                            {
                                <span class="badge bg-danger">@item.Sayi</span>
                            }
                            @if (item.Sayi > 20 && item.Sayi <= 60)
                            {
                                <span class="badge bg-success">@item.Sayi</span>
                            }
                            @if (item.Sayi > 60)
                            {
                                <span class="badge bg-primary">@item.Sayi</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
